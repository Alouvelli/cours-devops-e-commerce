pipeline {
    agent any

    tools {
        maven "3.8.4"
    }

    stages {
        stage('Git CheckOut') {
            steps {
                git(
                    url:'https://github.com/bassbiteye/cours-devops-e-commerce.git',
                    branch:'client_Mamadou_Moustapha_Diallo'
                )

                bat "git log"
            }
        }

        stage('Package') {
          steps {
             bat 'mvn clean package'
          }
        }

        stage('Test code gestion client') {
            steps {
                bat "mvn test"
            }
        }

        stage("SonarQube analys"){
            steps{
                withSonarQubeEnv('sonarqube-9.2'){
                    bat "mvn sonar:sonar"
                }
            }
        }



        stage('jfog') {
            steps{
                rtServer (
                    id:"Artifactory",
                    url:"http://localhost:8081/artifactory",
                    username:"jinkins",
                    password:"Jinkins1",
                    bypassProxy:true,
                    timeout:300

                )
            }
        }

        stage('Upload') {
            steps{
                rtUpload (
                    serverId:"Artifactory",
                   spec: '''{
                       "files":[
                           {
                               "pattern":"*.war",
                               "target": "devops-libs-snapshot-local"
                           }
                           ]
                   }''',

                )
            }
        }


        stage('Publish build info') {
            steps{
                rtPublishBuildInfo (
                    serverId:"Artifactory"

                    )
            }
        }
    }

     post {
         always {
             junit 'target/surefire-reports/TEST-*.xml'
         }
     }

}